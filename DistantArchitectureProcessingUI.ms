        local elementCount = elementsArray.count
        format "æ‰¾åˆ° % ä¸ªç‹¬ç«‹å…ƒç´ \n" elementCount
        
        -- åˆ†æ‰¹å¤„ç†å…ƒç´ 
        local batchSize = 10
